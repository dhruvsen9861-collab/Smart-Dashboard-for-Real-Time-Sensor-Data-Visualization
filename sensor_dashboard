# ğŸ“§ Email Config
EMAIL_SENDER = "dhruvsen9861@gmail.com"        # âœ… Sender Gmail
EMAIL_PASSWORD = "pelg epsk yddx hjhd"         # âœ… App Password (16-digit, with spaces)
EMAIL_RECEIVER = "dhruv.bca2023@spsu.ac.in"    # âœ… Receiver (college mail)

# ğŸ“‚ CSV file to store data
CSV_FILE = "sensor_data_log.csv"

# ğŸŒ¡ï¸ Function to simulate sensor data
def generate_sensor_data():
    return {
        "timestamp": datetime.datetime.now().isoformat(),
        "temperature": round(random.uniform(22, 35), 2),
        "humidity": round(random.uniform(40, 90), 2),
        "light_level": round(random.uniform(0, 100), 1),
        "motion": "Detected" if random.random() > 0.5 else "None",
        "air_quality_index": random.randint(50, 150),
        "noise_level": round(random.uniform(30, 80), 1),
        "location": "Lab Room",
        "min_light": 0,
        "max_light": 100
    }

# ğŸ“ Save data into CSV
def log_to_csv(data):
    print("Saving data to:", os.path.abspath(CSV_FILE))  # Debug print
    with open(CSV_FILE, mode="a", newline="") as file:
        writer = csv.DictWriter(file, fieldnames=data.keys())
        if file.tell() == 0:  # if file is empty
            writer.writeheader()
        writer.writerow(data)
        
 # âœ… Save into CSV
    log_to_csv(data)

# âœ‰ï¸ Send email alerts
def send_email_alert(alerts):
    subject = "ğŸ”” Sensor Alert!"
    message = "âš ï¸ Alerts triggered:\n\n" + "\n".join(alerts)
    msg = MIMEText(message)
    msg["Subject"] = subject
    msg["From"] = EMAIL_SENDER
    msg["To"] = EMAIL_RECEIVER

    try:
        with smtplib.SMTP_SSL("smtp.gmail.com", 465) as server:
            server.login(EMAIL_SENDER, EMAIL_PASSWORD)
            server.sendmail(EMAIL_SENDER, EMAIL_RECEIVER, msg.as_string())
        print("ğŸ“§ Email alert sent!")
    except Exception as e:
        print("âŒ Failed to send email:", e)

# ğŸ” Loop to send data every 10 seconds
while True:
    data = generate_sensor_data()

    # âœ… Push to Power BI
    response = requests.post(POWER_BI_URL, json=[data])
    if response.status_code == 200:
        print("âœ… Sent to Power BI:", data)
    else:
        print("âŒ Error:", response.status_code, response.text)

    # âœ… Check thresholds for alerts
    alerts = []
    if data["motion"] == "Detected":
        alerts.append("ğŸš¨ Motion Detected!")
    if data["temperature"] > 30:
        alerts.append(f"ğŸ”¥ High Temperature: {data['temperature']}Â°C")
    if data["noise_level"] > 75:
        alerts.append(f"ğŸ”Š High Noise Level: {data['noise_level']} dB")
    if data["light_level"] < 20:
        alerts.append(f"ğŸ’¡ Very Low Light Level: {data['light_level']} Lux")

    if alerts:
        send_email_alert(alerts)

    time.sleep(10)

